<h1>招聘信息管理</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>商家</th>
      <th>职位</th>
      <th>标题</th>
      <th>薪资</th>
      <th>描述</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><strong><%= job.id %>.</strong>&nbsp;<%= link_to job.user.name, user_path(job.user) %></td>
        <td><%= ApplicationHelper::JOB_CATES[job.cate_id] %></td>
      
        <td><%= job.title %></td>
        <td><%= job.salary %></td>
        <td><%= job.content.truncate(1000) %></td>
        <td><%= link_to '详情', job %></td>
        <td><%= link_to '编辑', edit_job_path(job) %></td>
        <td><%= link_to '删除', job, method: :delete, data: { confirm: '确定要删除?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= will_paginate @jobs %>
