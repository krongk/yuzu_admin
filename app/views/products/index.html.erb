<h1>Listing products</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>User</th>
      <th>Cate</th>
      <th>Region</th>
      <th>City</th>
      <th>District</th>
      <th>Title</th>
      <th>Content</th>
      <th>Price</th>
      <th>Detail address</th>
      <th>Pv</th>
      <th>Is processed</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.user.name, user_path(product.user) %></td>
        <td><%= product.cate_id %></td>
        <td><%= link_to product.region.try(:name), region_path(product.region) %></td>
        <td><%= link_to product.city.try(:name), city_path(product.city) %></td>
        <td><%= link_to product.district.try(:name), district_path(product.district) %></td>
        <td><%= product.title %></td>
        <td><%= product.content %></td>
        <td><%= product.price %></td>
        <td><%= product.detail_address %></td>
        <td><%= product.pv %></td>
        <td><%= product.is_processed %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

