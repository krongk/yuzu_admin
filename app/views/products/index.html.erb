<h1>产品／服务／商家信息</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>用户</th>
      <th>分类</th>
      
      <th>标题</th>
      <th>内容</th>
      <th>薪资</th>
      <th>详细地址</th>
      <th>页面浏览数</th>
      <th>执行情况</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.user.name, user_path(product.user.id) %></td>
        <td><%= product.cate_id %></td>
        <td><%= product.title %></td>
        <td><%= product.content %></td>
        <td><%= product.price %></td>
        <td><%= product.detail_address %></td>
        <td><%= product.pv %></td>
        <td><%= product.is_processed %></td>
        <td><%= link_to '详细', product %></td>
        <td><%= link_to '编辑', edit_product_path(product) %></td>
        <td><%= link_to '删除', product, method: :delete, data: { confirm: '确定要删除?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
